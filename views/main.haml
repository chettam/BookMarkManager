%h1 "hello world"

%ul
  -@links.each do |link|
    %li
      %a{title: link.title,href: link.url}
        =link.title

#new-link
  %form{ action: '/links', method: 'post'}
    %label{for: 'title'} Title:
    %input{type: 'text', name: 'title'}
    %label{for: 'url'} Url:
    %input{type: 'text', name: 'url'}
    %input{type: 'submit',name: 'submit', value: 'Add link' }


